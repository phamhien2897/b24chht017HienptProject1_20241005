@using b24chht017HienptProject1.Models
@model List<Personnel>

<div class="pcoded-content">
    @* <div class="row" style="text-align:right">
        <button class="btn btn-success btn-outline-success" style="margin-right:0px" id="btnAddNhanVien">
            <i class="ti-plus"></i>Thêm mới
        </button>
    </div> *@
    <div class="pcoded-inner-content">
        <div class="main-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã nhân viên</th>
                        <th>Họ tên</th>
                        <th>Ngày sinh</th>
                        <th>Địa chỉ</th>
                        <th>Ngày bắt đầu làm việc</th>
                        <th>Trình độ</th>
                        <th>Số điện thoại</th>
                        <th>Loại nhân viên</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.CodePersonnel</td>
                                <td>@item.FullName</td>
                                <td>@item.DateOfBirth.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                <td>@item.Address</td>
                                <td>@item.WorkStartDate.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                @{
                                    string TrinhDo = "Đại học";
                                    switch (item.Training_Level)
                                    {
                                        case 1:
                                            TrinhDo = "Đại học";
                                            break;
                                        case 2:
                                            TrinhDo = "Thạc sỹ";
                                            break;
                                        case 3:
                                            TrinhDo = "Tiến sỹ";
                                            break;
                                        default:
                                            TrinhDo = "Đại học";
                                            break;
                                    }
                                }
                                <td>@TrinhDo</td>
                                <td>@item.PhoneNumber</td>
                                @{
                                    string LoaiNhanVien = "Bác sĩ";
                                    if (item.Type == 2)
                                    {
                                        LoaiNhanVien = "Y tá";
                                    }
                                }
                                <td>@LoaiNhanVien</td>
                            </tr>
                        }
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
<div id="modalAddNhanVien" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm nhân viên</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-block">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Simple Input</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control">
                            </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Simple Input</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#btnAddNhanVien').on("click", function () {
        $('#modalAddNhanVien').modal('show');
        // $('#myModal').modal('hide');
    });
</script>